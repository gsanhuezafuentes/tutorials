<?xml version="1.0"?>
<odoo>
    <record id="estate_property_model_action" model="ir.actions.act_window">
        <field name="name">Estate</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="property_type_id"/>
                <field name="tags_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="estate_estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="tags_ids" widget="many2many_tags"/>
                        <group>
                            <group>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_price" string="Best Offer"/>
                                <field name="selling_price"/>
                            </group>
                            <group>
                                <field name="active"/>
                                <field name="last_seen"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="living_area"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="total_area"/>
                                    <field name="garden_orientation"/>
                                </group>
                            </page>
                            <page string="Offer">
                                <group>
                                    <field name="offers_ids"/>
                                </group>
                            </page>
                            <page string="Other info">
                                <group>
                                    <field name="property_type_id"/>
                                    <field name="buyer_id"/>
                                    <field name="salesperson_id"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_delivery_carrier_search" model="ir.ui.view">
        <field name="name">estate.estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name" string="Name" />
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="date_availability"/>
                <field name="property_type_id"/>
                <field name="tags_ids"/>
                <separator/>
                <filter string="State" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="1" string="Group By">
                    <filter string="Garden Orientation" name="orientation" context="{'group_by':'garden_orientation'}"/>
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>


</odoo>